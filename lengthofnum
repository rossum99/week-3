#include <stdio.h>

int main() {
    int n, length = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    if (n == 0) {
        length = 1;
    } else {
        while (n != 0) {
            n /= 10;  
            length++;
        }
    }

    printf("The length of the number is: %d\n", length);

    return 0;
}
